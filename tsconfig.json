{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["react", "react-dom"]
  },
  "include": ["src"]
}
